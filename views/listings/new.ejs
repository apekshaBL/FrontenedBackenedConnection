<% layout("/layouts/boilerplate") %>
<body>
    

    <div class="row">
        <div class="col-8 offset-2" >
            <br>
            <h3 >Create a new listings</h3>
            <br>
    <form method="POST" action="/listings" >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text"class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  class="form-control" type="text"></textarea>
            
        </div>
       
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" class="form-control" placeholder="enter image URL/Link" type="text">
        </div>
        <div class="row">
            <div class="mb-3  col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="enter price" class="form-control" type="number">
            </div>
            
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="enter your country name" class="form-control"type="text">
            </div>


        </div>
        
       
    
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="enter location" class="form-control"  type="text">
        </div>
        
        <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>

    </form>
</div>
</div>
</body>